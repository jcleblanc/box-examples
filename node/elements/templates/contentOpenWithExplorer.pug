doctype html
html(lang="en")
  head
    title Box Content Open With
    script(src='https://cdn.polyfill.io/v2/polyfill.min.js?features=es6,Intl')
    link(rel='stylesheet', href='https://cdn01.boxcdn.net/platform/elements/7.2.0/en-US/explorer.css')
  body
    div(class='container', style='height:600px')
    
    script(src='https://cdn01.boxcdn.net/polyfills/core-js/2.5.3/core.min.js')
    script(src='https://cdn01.boxcdn.net/platform/elements/7.2.0/en-US/explorer.js')
      
    script(type="text/javascript").
      var folderId = '#{fid}';
      var accessToken = '#{at}';
      var contentExplorer = new Box.ContentExplorer();
      contentExplorer.show(folderId, accessToken, {
        container: '.container',
        contentPreviewProps: {
          contentOpenWithProps: {
            show: true
          }
        }
      })
